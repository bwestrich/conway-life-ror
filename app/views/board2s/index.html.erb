<h1>boards</h1>

<%= javascript_tag do %>
  window.productsURL = "<%j @products_url %>";
  window.board2s = <%=raw Board2.limit(10).to_json %>;
<% end %>

<table>
  <tr>
    <th>Number of rows</th>
    <th>Number of columns</th>
    <th>Percent initially live</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @board2s.each do |board2| %>
  <tr>
    <td align="right"><%= board2.nrows %></td>
    <td align="right"><%= board2.ncolumns %></td>
    <td align="right"><%= board2.percentLive %></td>
    <td><%= link_to 'Show', board2 %></td>
    <td><%= link_to 'Edit', edit_board2_path(board2) %></td>
    <td><%= link_to 'Destroy', board2, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

